    "url": "https://github.com/yourusername/taskflow-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/taskflow-app/issues"
  },
  "homepage": "https://yourusername.github.io/taskflow-app",
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
